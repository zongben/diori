{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "module": "es2022",
    "target": "es2022",
    // For nodejs:
    "lib": [
      "esnext",
    ],
    "types": [
      "node"
    ],
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true
  }
}
